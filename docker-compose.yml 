version: "3.9"

services:
  backend:
    build: ./back/server
    container_name: backend_server
    ports:
      - "4000:4000"
    env_file:
      - ./back/server/.env
    restart: unless-stopped

  frontend:
    build: ./front
    container_name: frontend_app
    ports:
      - "5173:5173"
    depends_on:
      - backend
    restart: unless-stopped